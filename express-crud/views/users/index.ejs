<!DOCTYPE html>
<html>
<head>
<title>Users</title>
<link rel="stylesheet" href="../stylesheets/style.css">
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>        
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <a href="/" class="btn btn-primary ml-3">Home</a>
        <a href="/users/add" class="btn btn-secondary ml-3">New Users</a>
        <a href="/users" class="btn btn-info ml-3">Users List</a>
    </div>
    <% if(messages.error) {%>
        <p style="color:red;" class="alert alert-error mt-4"><%- messages.error%></p>
      <% } %>

    <% if(messages.success) {%>
        <p style="color:green;" class="alert alert-success mt-4"><%- messages.success%></p>
      <% } %>
     <br>
     <table class="table">
        <thead>
            <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Gender</th>
        <th scope="col">Phone No</th>
        <th scope="col">Language</th>
        <th scope="col">Interest</th>
        <th scope="col">Message</th>
        <th width="200px">Action</th>
        </tr>
        </thead>
        <tbody>
            <% if(data.length){
                for(var i=0;i<data.length;i++){%>
           <tr>
            <th scope="row"><%= (i+1) %></th>
            <td><%=data[i].uname%></td>
            <td><%=data[i].uemail%></td>
            <td><%=data[i].ugender%></td>
            <td><%=data[i].uphoneno%></td>
            <td><%=data[i].ulanguage%></td>
            <td><%=data[i].uinterest%></td>
            <td><%=data[i].umessage%></td>
            <td>
        <a class="btn btn-success edit" href="../users/edit/<%= data[i].uid%>">Edit</a>
        <a class="btn btn-danger delete" onclick="return alert('Are you Sure')" href="../users/delete/<%= data[i].uid%>">Delete</a>

            </td>
           </tr>         
           <%
                }
            }
            else
            {%>
         <tr><td colspan=3 align="center">No Records Found</td></tr>       

       <%     } %>
        </tbody>
     </table>
</body>
</html>